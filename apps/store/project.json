{
  "sourceRoot": "apps/store/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/web:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/apps/store",
        "index": "apps/store/src/index.html",
        "baseHref": "/",
        "main": "apps/store/src/main.tsx",
        "polyfills": "apps/store/src/polyfills.ts",
        "tsConfig": "apps/store/tsconfig.app.json",
        "assets": ["apps/store/src/favicon.ico", "apps/store/src/assets"],
        "styles": ["apps/store/src/styles.scss"],
        "scripts": [],
        "webpackConfig": "@nrwl/react/plugins/webpack"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/store/src/environments/environment.ts",
              "with": "apps/store/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/web:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "store:build",
        "hmr": true,
        "proxyConfig": "apps/store/proxy.conf.json"
      },
      "configurations": {
        "development": {
          "buildTarget": "store:build:development"
        },
        "production": {
          "buildTarget": "store:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/store/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/store"],
      "options": {
        "jestConfig": "apps/store/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/react",
        "port": 4400,
        "config": {
          "configFolder": "apps/store/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "uiFramework": "@storybook/react",
        "outputPath": "dist/storybook/store",
        "config": {
          "configFolder": "apps/store/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "npx surge dist/apps/store ${SURGE_DOMAIN_STORE} --token ${SURGE_TOKEN}"
      }
    },
    "create-script": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          { "command": "mkdir -p scripts", "forwardAllArgs": false },
          {
            "command": "touch scripts/{args.name}.sh",
            "forwardAllArgs": false,
            "color": "magenta",
            "bgColor": "bgBlue"
          },
          {
            "command": "chmod +x scripts/{args.name}.sh",
            "forwardAllArgs": false
          }
        ],
        "cwd": "apps/store",
        "parallel": true
      }
    },
    "finish-when-ready": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["sleep 5 && echo 'FINISHED'", "echo 'READY'"],
        "readyWhen": "READY",
        "parallel": true
      }
    }
  },
  "tags": ["scope:store", "type:app", "katerina"]
}
